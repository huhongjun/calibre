    "version": "0.2.0",
    "configurations": [
        {
            "name": "P1: 9000",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "P1: ebook-meta",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/ebook-meta.py",
            "args": [
                "~/Downloads/Control.epub",
                "--get-cover=/home/axe/Downloads/cover.jpg"
            ],
            "environment": [
                {
                    "CALIBRE_PYTHON_PATH": "${workspaceRoot}/src/calibre",
                    "PYTHONIOENCODING": "utf-8"
                }
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}